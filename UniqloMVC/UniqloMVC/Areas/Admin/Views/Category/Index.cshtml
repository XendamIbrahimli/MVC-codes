@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@model List<Category>
@{
    ViewData["Title"] = "Index";
    int TableNo = 1;
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Category List</h6>
        <a asp-action="Create" asp-controller="Category" class="btn btn-outline-primary ml-auto">Create Category</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered tab-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th colspan="2" scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(TableNo++)</td>
                            <td>@item.Name</td>
                            <td><a class="btn btn-success" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">Update</a></td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a></td>
                            
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10">No Category available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>